<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_rounded_bg"
    android:id="@+id/layout"
    android:orientation="vertical"
    >


    <TextView
        android:id="@+id/titleofscreen"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:fontFamily="@font/montserrat"
        android:paddingTop="10dp"
        android:text="@string/calendar"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <View
        android:id="@+id/divider"
        android:layout_width="330dp"
        android:layout_gravity="center"
        android:layout_height="2dp"
        android:background="#1A000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp">

        <CalendarView
            android:id="@+id/calendarView2"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:background="@color/white" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/appointments"
            android:textColor="@color/Error"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Add_App"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_toRightOf="@id/text1"
            android:text="Add Appointment" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerviewSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginStart="31dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:scrollbars="none" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/RecyclerviewSession"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/medicine"
            android:textColor="#4CA758"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/Add_Med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/Add_App"
            android:layout_marginStart="80dp"
            android:layout_toRightOf="@id/text1"
            android:text="Add Medicine" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewMedicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="31dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:scrollbars="none" />


        <include
            layout="@layout/add_medicine_appointment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </RelativeLayout>


</LinearLayout>
