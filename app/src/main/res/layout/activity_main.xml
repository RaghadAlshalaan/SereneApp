<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/w2"
        >

        <ImageView
            android:id="@+id/smartwatch"
            android:layout_width="310dp"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/smartwatch_dialog"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accuracy"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="For more accurate results, we\nrecommend wearing your smartwatch\nfor at least 12 hours a day."
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="360dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />

        <ImageView
            android:id="@+id/ok2"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/ok_button"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        android:gravity="center_horizontal"
        android:id="@+id/w1"
        >

        <ImageView
            android:id="@+id/success"
            android:layout_width="310dp"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/success_dialog"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="325dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account created, a link has been\nsent to confirm your email ! "
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="370dp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />

        <ImageView
            android:id="@+id/ok1"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/ok_button"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/overbox"
        android:orientation="vertical"
        android:elevation="9dp"
        android:background="@drawable/overbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




    <LinearLayout
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/white_bg"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_host_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logoMain"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/serene_logo_main" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:id="@+id/bell_icon"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_bell_icon" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_profile_icon" />

    </LinearLayout>


    <fragment
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="610dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:navGraph="@navigation/mobile_navigation"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemTextColor="@drawable/nav_item_background"
        app:itemIconTint="@drawable/nav_item_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>