<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".controller.main.calendar.Add_Medicine_Page">

    <View
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_bg" />

    <TextView
        android:id="@+id/Add_Medicine_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Medicine"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NameMedicientextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/white_bg"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="@string/medicine_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/MedicineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NameMedicientextView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/intakeDaysTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/MedicineName"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Days of Intake"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/MedicineDaysFrom"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/intakeDaysTV"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="DD/MM/YY"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/intakeDaysTV"
        android:layout_toRightOf="@id/MedicineDaysFrom"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/MedicineDaysTill"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/intakeDaysTV"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/D"
        android:ems="10"
        android:hint="DD/MM/YY"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/TimetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of the Day"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_below="@id/MedicineDaysFrom"/>

    <EditText
        android:id="@+id/MedicineTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@id/TimetextView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/DosetextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dose"
        android:textSize="18sp"
        android:layout_below="@id/MedicineTime"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/MedicineDose"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text=""
        android:layout_below="@id/DosetextView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tablets"
        android:layout_below="@id/DosetextView"
        android:layout_toRightOf="@id/MedicineDose"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/ConfirmAddedMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>
