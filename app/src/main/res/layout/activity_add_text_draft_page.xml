<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Homepage.Drafts.AddTextDraftPage">

    <View
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_bg" />

    <TextView
        android:id="@+id/Add_Text_Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:text="Add Text Draft"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titletextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/white_bg"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="Title of Draft"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titletextView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/SubjectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titletextView"
        android:layout_marginStart="50dp"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:text="Subject of Draft"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/SubjText"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@id/SubjectText"
        android:layout_marginStart="50dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="You Subject"
        android:inputType="textMultiLine"
        android:singleLine="false" />

    <Button
        android:id="@+id/ConfirmTextDraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="50dp"
        android:text="Confirm" />



</RelativeLayout>