<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    >


    <View
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/titleofscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/gad_7_scale"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/white_bg"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_rounded_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:id="@+id/description"
            android:layout_width="370dp"
            android:layout_height="85dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:text="@string/gad7_description"
            android:textColor="@color/Grey"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/mainLayoutQs"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:paddingEnd="10dp">


            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/a1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="122dp"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:text="@string/not_at_nall_sure"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/a2"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/several_days"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/a3"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="1dp"
                    android:paddingEnd="1dp"
                    android:text="@string/over_half_nthe_days"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/a4"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/nearly_every_day"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/question1"
                    android:layout_width="122dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center_vertical"
                    android:paddingBottom="5dp"
                    android:text="@string/feeling_nervous_anxious_or_on_edge"
                    android:textColor="#8A000000"
                    android:textSize="12sp" />

                <RadioGroup
                    android:id="@+id/radio1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton11"
                        android:layout_width="55dp"
                        android:layout_height="match_parent" />

                    <RadioButton
                        android:id="@+id/radioButton12"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/radioButton13"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:gravity="center" />

                    <RadioButton
                        android:id="@+id/radioButton14"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:gravity="center" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
