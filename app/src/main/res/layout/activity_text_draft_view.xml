<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Homepage.Drafts.TextDraftView">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Controller.Homepage.Drafts.AddTextDraftPage">

        <View
            android:id="@+id/white_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/white_bg" />

        <TextView
            android:id="@+id/draftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/montserrat"
            android:text="title"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/draftMsg"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/draftTitle"
            android:layout_marginStart="50dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="You Subject"
            android:inputType="textMultiLine"
            android:singleLine="false" />


        <TextView
            android:id="@+id/delete"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:layout_below="@id/draftMsg"
            android:layout_marginTop="40dp"
            android:textColor="@color/recorder_bg"></TextView>





    </RelativeLayout>
</LinearLayout>