<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".Controller.Homepage.Calendar.Add_Appointment_Page">

    <View
        android:id="@+id/white_bg"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/white_bg" />

    <TextView
        android:id="@+id/add_Appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/montserrat"
        android:text="add Appointment"
        android:textColor="#000000"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NametextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/white_bg"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:text="Name of Appointment"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/AppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/NametextView"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/DateTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AppName"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Appointment Date"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/AppDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DateTV"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:hint="DD/MM/YY"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/TimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time of the Day"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_below="@id/AppDate"/>

    <EditText
        android:id="@+id/AppTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@id/TimeTV"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <CheckBox
        android:id="@+id/AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AM"
        android:layout_toRightOf="@id/AppTime"
        android:layout_below="@id/TimeTV"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>
    <CheckBox
        android:id="@+id/PM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PM"
        android:layout_toRightOf="@id/AppTime"
        android:layout_below="@id/AM"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/ConfirmAddApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="100dp"/>

</RelativeLayout>
