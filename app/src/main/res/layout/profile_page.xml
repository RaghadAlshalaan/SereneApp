<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Controller.Homepage.Patient.PatientProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/edit_profile_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/edit_profile_icon" />

        <!--
        <Button
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_marginLeft="140dp"
            android:background="#00201B1B"
            android:fontFamily="@font/montserrat"
            android:text="@string/edit_profile"
            android:textColor="#ffffff" />-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/defaultpic" />


        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/full_name"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="email@email.com"
            android:textColor="#515C6F"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_rounded_bg"
        android:elevation="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="54dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/social_demo_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_report_icon" />

            <TextView
                android:id="@+id/socio_demo_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:text="@string/demographic_information"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:layout_gravity="center"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/go_to1"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/doctor_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_doctor_icon" />

            <TextView
                android:id="@+id/doctor_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:layout_gravity="center"                android:text="@string/doctor"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/doctor_text2"
                android:layout_width="148dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:paddingEnd="10dp"
                android:layout_gravity="center"
                android:text="@string/doctor"
                android:textColor="#66515C6F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/go_to2"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="362dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/language_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_language_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:layout_gravity="center"                android:fontFamily="@font/montserrat"
                android:text="@string/language"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="117dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:paddingEnd="10dp"
                android:layout_gravity="center"                android:text="@string/language"
                android:textColor="#66515C6F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/go_to3"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>


        <Button
            android:id="@+id/log_out_btn"
            android:layout_width="119dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="#79B1B0B0"
            android:fontFamily="@font/montserrat"
            android:text="@string/logout"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
