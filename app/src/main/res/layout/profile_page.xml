<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".controller.main.profile.PatientProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/edit_profile_btn"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/edit_profile_icon" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/defaultpic" />


        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/full_name"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="email@email.com"
            android:textColor="#515C6F"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_rounded_bg"
        android:elevation="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="@string/alert"
            android:textColor="#FF0000"
            android:textSize="15sp"
            android:textStyle="normal"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/social_demo_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_report_icon" />

            <TextView
                android:id="@+id/socio_demo_title"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/demographic_information"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/go_to1"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/doctor_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_doctor_icon" />

            <TextView
                android:id="@+id/doctor_text"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/doctor"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/doctor_text2"
                android:layout_width="148dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="@string/doctor"
                android:textAlignment="textEnd"
                android:textColor="#66515C6F"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/go_to2"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_background"
            android:clickable="true"
            android:focusable="auto"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/language_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/ic_language_icon" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/language"
                android:textColor="#515C6F"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="117dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat"
                android:gravity="center_vertical"
                android:paddingEnd="10dp"
                android:text="@string/language"
                android:textAlignment="textEnd"
                android:textColor="#66515C6F"
                android:textSize="15sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/go_to3"
                android:layout_width="30dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_go_to" />

        </LinearLayout>


        <Button
            android:id="@+id/log_out_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/logout"
            android:textColor="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
